                        <option>Aided</option>
                        <option>Private</option>
                      </select>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-sm-2" for="disecode">DISE Code:</label>
                    <div class="col-sm-10">          
                      <input type="text" class="form-control" id="disecode">
                    </div>
                  </div>
                  <div class="form-group">        
                    <div class="col-sm-offset-2 col-sm-10">
                      <button type="submit" class="btn btn-primary">Submit</button>
